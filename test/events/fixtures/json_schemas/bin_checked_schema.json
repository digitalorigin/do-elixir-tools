{
    "$schema": "http://json-schema.org/draft-04/schema",
    "id": "https://pagantis.com/pmt/payments/bin_checked_schema.json",
    "type": "object",
    "title": "The Root Schema",
    "description": "The root schema comprises the entire JSON document.",
    "required": [
        "action",
        "group",
        "id",
        "occurred_at",
        "payload",
        "version"
    ],
    "properties": {
        "action": {
            "id": "#/properties/action",
            "type": "string",
            "title": "The Action Schema",
            "const": "BIN_CHECKED"
        },
        "group": {
            "id": "#/properties/group",
            "type": "string",
            "title": "The Group Schema",
            "const": "PMT_PAYMENT"
        },
        "id": {
            "id": "#/properties/id",
            "type": "string",
            "format": "uuid",
            "title": "The Id Schema",
            "examples": [
                "01b08871-9d95-5b1d-94e6-1465b72e2012"
            ],
            "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}$"
        },
        "occurred_at": {
            "id": "#/properties/occurred_at",
            "type": "string",
            "format": "date-time",
            "title": "The Occurred_at Schema",
            "examples": [
                "2020-03-31T00:23:20.202102Z"
            ],
            "pattern": "^(.*)$"
        },
        "payload": {
            "id": "#/properties/payload",
            "type": "object",
            "title": "The Payload Schema",
            "default": {},
            "examples": [
                {
                    "usable": true,
                    "cached": true,
                    "scheme": "mastercard",
                    "metadata": {},
                    "bin": "554054",
                    "bank": "Standard Immediate Debit",
                    "country": "ES",
                    "prepaid": null,
                    "type": "credit"
                }
            ],
            "required": [
                "bank",
                "bin",
                "cached",
                "country",
                "metadata",
                "prepaid",
                "scheme",
                "type",
                "usable"
            ],
            "properties": {
                "bank": {
                    "id": "#/properties/payload/properties/bank",
                    "type": "string",
                    "title": "The Bank Schema",
                    "description": "An explanation about the purpose of this instance.",
                    "default": "",
                    "examples": [
                        "Standard Immediate Debit"
                    ]
                },
                "bin": {
                    "id": "#/properties/payload/properties/bin",
                    "type": "string",
                    "title": "The Bin Schema",
                    "description": "An explanation about the purpose of this instance.",
                    "default": "",
                    "examples": [
                        "554054"
                    ],
                    "pattern": "^(\\d){6}$"
                },
                "cached": {
                    "id": "#/properties/payload/properties/cached",
                    "type": "boolean",
                    "title": "The Cached Schema",
                    "description": "An explanation about the purpose of this instance.",
                    "default": false,
                    "examples": [
                        true
                    ]
                },
                "country": {
                    "id": "#/properties/payload/properties/country",
                    "type": "string",
                    "title": "The Country Schema",
                    "description": "An explanation about the purpose of this instance.",
                    "default": "",
                    "examples": [
                        "ES"
                    ]
                },
                "metadata": {
                    "$id": "#/properties/payload/properties/metadata",
                    "type": "object",
                    "title": "The Metadata Schema",
                    "examples": [
                        {}
                    ]
                },
                "prepaid": {
                    "id": "#/properties/payload/properties/prepaid",
                    "title": "The Prepaid Schema",
                    "description": "An explanation about the purpose of this instance.",
                    "default": null,
                    "examples": [
                        null
                    ]
                },
                "scheme": {
                    "id": "#/properties/payload/properties/scheme",
                    "type": "string",
                    "title": "The Scheme Schema",
                    "description": "An explanation about the purpose of this instance.",
                    "default": "",
                    "examples": [
                        "mastercard"
                    ],
                    "enum": ["mastercard", "visa"]
                },
                "type": {
                    "id": "#/properties/payload/properties/type",
                    "type": "string",
                    "enum": ["credit", "debit"],
                    "title": "The Type Schema",
                    "description": "An explanation about the purpose of this instance.",
                    "default": "",
                    "examples": [
                        "credit"
                    ]
                },
                "usable": {
                    "id": "#/properties/payload/properties/usable",
                    "type": "boolean",
                    "title": "The Usable Schema",
                    "description": "An explanation about the purpose of this instance.",
                    "default": false,
                    "examples": [
                        true
                    ]
                }
            }
        },
        "version": {
            "id": "#/properties/version",
            "type": "string",
            "title": "The Version Schema",
            "examples": [
                "1.1.0"
            ],
            "pattern": "^(\\d+\\.)(\\d+\\.)(\\d+)$"
        }
    }
}